<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    tools:openDrawer="start">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tutorialImageView"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/results"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp" />

            <RelativeLayout
                android:id="@+id/lottery_number_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/ani_bg"
                app:layout_constraintTop_toBottomOf="@+id/tutorialImageView">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lotteryNumberCheckSearchAnimationOne"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/search" />

                <TextView
                    android:layout_toEndOf="@+id/lotteryNumberCheckSearchAnimationOne"
                    android:layout_toStartOf="@+id/lotteryNumberCheckSearchAnimationTwo"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="center"
                    android:text="লটারী ফলাফল চেক\nLottery Result Check\nलॉटरी रिजल्ट चेक"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lotteryNumberCheckSearchAnimationTwo"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/search" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/gridItemRootLayout"
                app:layout_constraintTop_toBottomOf="@+id/lottery_number_check"
                android:background="@color/teal_700"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/HomeCardParentLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/todayResultCardView"
                        style="@style/HomeCardViewStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="আজকের রেজাল্ট\nToday Result\nआज का परिणाम" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/yesterDayResultCardView"
                        style="@style/HomeCardViewStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="গতকালের রেজাল্ট\nYesterday Result\nकल का परिणाम" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    style="@style/HomeCardParentLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/yesterDayVsPreResultCardView"
                        style="@style/HomeCardViewStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="গতকাল এবং আগের দিন\nYesterday &amp; Previous\nकल और परसों" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/oldResultCardView"
                        style="@style/HomeCardViewStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="পুরোনো রেজাল্ট\nOld Result\nपुराने परिणाम" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    style="@style/HomeCardParentLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/specialOrBumperResultCardView"
                        style="@style/HomeCardViewStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="স্পেশাল ও বাম্পার\nSPL or Bumper\nविशेष और बम्पर" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/winingNumberCardView"
                        style="@style/HomeCardViewStyle"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            style="@style/HomeCardChildLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/HomeCardChildTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="বিজয়ী সংখ্যাগুলি\nWinning Numbers\nविजेता संख्या" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/heder"
        app:menu="@menu/iconmenu" />


</androidx.drawerlayout.widget.DrawerLayout>
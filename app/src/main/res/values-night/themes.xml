<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lutt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/teal_700_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="MyCardViewStyle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">@color/teal_700</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
    </style>
    <style name="CardChildLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_20sdp</item>
    </style>
    <style name="CardChildTextViewStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeButtonParentLayoutStyle">
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:weightSum">2</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="MyButtonStyle">
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/neon_button_bg</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/_1sdp</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
    </style>




















</resources>